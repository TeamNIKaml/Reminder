<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamnikaml.mycredentials"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.teamnikaml.mycredentials.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamnikaml.mycredentials.activity.PostLoginActivity"
            android:label="@string/title_activity_post_login" >
        </activity>
        <activity
            android:name="com.teamnikaml.mycredentials.activity.ChangePasswordActivity"
            android:label="@string/changePassword" >
        </activity>
          <activity
            android:name="com.teamnikaml.mycredentials.activity.NotificationReceiverActivity"
            android:label="@string/reminderDetails" 
            android:theme="@android:style/Theme.DeviceDefault.Light.DialogWhenLarge">
        </activity>
         <activity
            android:name="com.teamnikaml.mycredentials.activity.AboutUs"
            android:label="@string/changePassword" >
        </activity>
          
        

        <service
            android:name="com.teamnikaml.mycredentials.service.MyService"
            android:enabled="true" >
        </service>

        <receiver android:name="com.teamnikaml.mycredentials.service.BootCompletedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>