<resources>

     <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
          <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Example</item>
          
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/gradient_login_background</item>
         <item name="android:backgroundStacked">@color/tab_selected</item>
    </style>
    
    
      <style name="ActionBarTabStyle.Example" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_selector</item>
    </style>
    
      
      
      <style name="DialogAnimationrotateScale">
        <item name="android:windowEnterAnimation">@anim/rotate_scale_start</item>
        <item name="android:windowExitAnimation">@anim/rotate_scale_end</item>
    </style>
    
</resources>